<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <includes>
    <gdmlFile  ref="elements.xml"/>
    <gdmlFile  ref="materials.xml"/>
  </includes>
  
  <info name="FCC_Test"
        title="FCC Tracker"
        author="Julia"
        url="no"
        status="development"
        version="$Id:??$">
    <comment>A Test for a Tracker</comment>
  </info>

  <define>
    <constant name="world_size" value="30*m"/>
    <constant name="world_x" value="world_size"/>
    <constant name="world_y" value="world_size"/>
    <constant name="world_z" value="world_size"/>
    
    <constant name="pixelcounter" value="22"/>
    <constant name="radius" value="10*cm"/>
    <constant name="length" value="100.*cm"/>
    <constant name="box_width" value="8.*cm"/>
    <constant name="box_length" value="20.*cm"/>
    <constant name="box_thick" value="0.250*mm"/>
  </define>

  <display>
    <vis name="TrackerVis" r="1.0" g="0.0" b="1.0" alpha="1" showDaugthers="true" visible="true" drawingStyle="wireframe"/>
<!--    <vis name="TrackerLayerVis" r="0.0" g="1.0" b="0.0" alpha="1" showDaugthers="false" visible"true" drawingStyle="wireframe"/>-->
    <vis name="TrackerBoxesVis" r="1.0" g="0.0" b="0.0" alpha="1" showDaugthers="true" visible="true" drawingStyle="solid" lineStyle="solid"/>
  </display>
  
<detectors>
    <detector id="0" name="Tracker" type="TestTracker" readout="TrackerReadout" vis="TrackerVis" radius="radius">
       <box width="box_width" thickness="box_thick" length="box_length" repeat="pixelcounter" deltaphi="360.*deg/pixelcounter" material="Silicon"/>
    </detector>
</detectors>-

 <readouts>
    <readout name="TrackerReadout">
        <id>module:22</id>
    </readout>
  </readouts>

</lccdd>